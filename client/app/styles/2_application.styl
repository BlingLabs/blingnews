@import 'nib'
@import '1_library'

$white = #FFFFFF
$light-gray = #DDDDDD
$gray = #999999
$dark-gray = #666666
$black = #232323
$light-yellow = #FFFCF4
$yellow = #FFFAE6
$green = #70B131
$red = #B65025

@font-face {
  font-family: 'Museo300Regular';
  src: url('fonts/Museo300-Regular-webfont.eot');
  src: url('fonts/Museo300-Regular-webfont.eot?#iefix') format('embedded-opentype'),
       url('fonts/Museo300-Regular-webfont.woff') format('woff'),
       url('fonts/Museo300-Regular-webfont.ttf') format('truetype'),
       url('fonts/Museo300-Regular-webfont.svg#Museo300Regular') format('svg');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Museo500Regular';
  src: url('fonts/Museo500-Regular-webfont.eot');
  src: url('fonts/Museo500-Regular-webfont.eot?#iefix') format('embedded-opentype'),
       url('fonts/Museo500-Regular-webfont.woff') format('woff'),
       url('fonts/Museo500-Regular-webfont.ttf') format('truetype'),
       url('fonts/Museo500-Regular-webfont.svg#Museo500Regular') format('svg');
  font-weight: normal;
  font-style: normal;
}

body {
  margin: 0;
  anti-aliasing();
  background-color: $white;
  font-family: 'Museo300Regular', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-weight: normal;
  font-size: 62.5%;
  color: $gray;
  letter-spacing: 1px;
}

.container {
  margin: 0 auto;
  width: 100%;
  font-size: 1.7em, 1.5em, 1.7em;
  line-height: 1.6;
}

.content {
  margin: 0 auto;
  max-width: 100em;
}

.side {
  width: 100%, 40%, 30%;

  .header {
    padding: 2em 2em 2em 4.4em, null, null;
    color: $white;
    background-color: $black;
    text-align: center, left, left;

    .logo {
        width: 1.7em;
        height: 1.6em;
        vertical-align: middle;
        margin: -0.2em 0.5em 0 -2.6em;
    }

    .logo:hover {
        opacity: 0.8;
    }

    .logged-out {
      font-size: 0.8em;
      color: $gray;

      a {
        font-family: 'Varela Round', Helvetica, Arial, sans-serif;
        font-size: 0.78em;
        border-bottom-style: dotted;
        border-bottom-width: 1px;
        border-bottom-color: $light-gray;
        color: $white;
        text-decoration: none;
      }
    }
  }

  ul.articles {
    margin: 0;
    padding: 0;
    background-color: $yellow;
    overflow-y: scroll;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;

    li {
      background-color: $yellow;
      border-bottom-style: solid;
      border-bottom-width: 1px;
      border-bottom-color: $light-gray;
      cursor: pointer;
      list-style-type: none;
      padding: 2em;
      transition: 0.25s;

      border-left-style: solid;
      border-left-width: 0px;

      &.yes {
        border-left-width: 1.25em;
        border-left-color: $green;
      }

      &.no {
        border-left-width: 1.25em;
        border-left-color: $red;
      }

      &:hover {
        background: $light-yellow;
      }

      .item-meta {
        font-family: 'Varela Round', Helvetica, Arial, sans-serif;
        font-size: 0.8em;
        line-height: 1.8em;
        text-transform: lowercase;
      }
    }
  }
}

.main {
  background-color: $white;
  width: 100%, 60%, 70%;
  padding: 4.5em 3em, 3em 6em, 4em 8em;
  overflow-y: scroll;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  left: 100%;
  position: fixed, static, static;
  transition: 0.5s;

  .meta {
    font-family: 'Varela Round', Helvetica, Arial, sans-serif;
    font-size: 0.8em;
    margin: 0 0 4em 0;
    line-height: 2.5em;
  }

  .article-body {
    img {
      margin: 0 2em 1.5em 0 !important;
    }
  }

  .endbar {
    margin: 3em 0;
    padding: 1em 1.5em, null, null;
    background-color: $black;

    .vote {
      cursor: pointer;
      display: inline-block;
      width: 2em;
      height: 2em;
      background-position: -2em;
      background-size: cover;
      vertical-align: middle;
      opacity: 0.8;

      &.yes {
        background-image: url('../images/yes.svg');
      }

      &.no {
        background-image: url('../images/no.svg');
      }

      &.clicked {
        background-position: 0;
      }
    }

    .vote-top {
      cursor: pointer;
      display: inline-block;
      width: 2em;
      height: 2em;
      background-position: -2em;
      background-size: cover;
      margin: 0 0 0 -2.4em;
      opacity: 1;
      vertical-align: middle;
      transition: transform 0.25s, opacity 0.5s ease-out, height 0s step-start;
      transform: scale(1);

      &.yes {
        background-image: url('../images/yes.svg');
      }

      &.no {
        background-image: url('../images/no.svg');
      }

      &.clicked {
        background-position: 0;
        opacity: 0;
        height: 0;
        transition: transform 0.25s, opacity 0.5s ease-out, height 0.5s step-start 0.5s;
        transform: scale(6);
      }
    }
  }

  .mobile-dismiss {
    visibility: visible, hidden, hidden;
    background-color: $black;
    border-radius: 50%;
    border-width: 0;
    position: absolute;
    padding: 0;
    top: 1.5em;
    left: 1.5em;
    width: 2em;
    height: 2em;
    line-height: 2em;
    opacity: 0.5;
    outline: 0;
    color: $white;
  }

  &.visible {
    left: 0%;
  }
}

h1 {
  color: $black;
  font-size: 1.8em;
  line-height: 1.4;
  margin-top: 0em;
  margin-bottom: 0em;
}

::-webkit-scrollbar {
  width: 0.6em;
}

::-webkit-scrollbar-track {
  background: #dedede;
}

::-webkit-scrollbar-thumb {
  background: #bebebe;
}

::-webkit-scrollbar-thumb:window-inactive {
  background: rgba(255,0,0,0.4);
}

